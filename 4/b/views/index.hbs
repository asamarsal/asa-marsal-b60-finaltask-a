{{#> layout currentPage='Home'}}

{{#if messages.success}}
    <div class="alert alert-success alert-dismissible fade show mt-2 m-4 d-flex justify-content-between align-items-center" style="user-select:none" role="alert">
            {{messages.success}}
            <button type="button" class="btn-close ms-2" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}

<h1 class="textBounce intro-my-name" style="text-align: center; margin-top: 20px;">Pokemon</h1>
<img 
    src="/img/wallpaperindex.jpg" 
    alt="Pokemon Wallpaper" 
    style="width: 90%; height: auto; margin: 20px auto 0; display: block;"
    class="mb-4"
>
<script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>

<script>
    gsap.from(".textBounce", { y: -80, opacity: 0, duration: 3, ease: "bounce" });
</script>
{{/layout}}