{{#> layout currentPage='Blog'}}

    <form id="create-blog" class="create-blog-form" method="post" action="/blog-update/{{index}}?_method=PATCH">
      
        <h1 style="user-select: none; text-align: center">Edit Pokemon</h1>

        <div class="editblog-image-container">
            <img src="/img/icons/pokeball_icon.png" alt="Pokemon" style="width: 150px; height: auto;">
        </div>

        <div class="input-group mb-3 mt-4" style="user-select: none;">
            <input name="title" id="title" type="text" placeholder="Nama Pokemon" class="form-control" aria-label="Sizing example input" aria-describedby="title" value="{{blog.title}}" required>
        </div>

        <div class="input-group mb-3 mt-3" style="user-select: none;">
            <select name="pokemontype" class="form-select" aria-label="Pokemon Type Selection" required style="color: #6c757d;">
                <option value="">Tipe Pokemon</option>
                <option value="1" {{#if (equal blog.pokemontype "1")}}selected{{/if}}>Fire</option>
                <option value="2" {{#if (equal blog.pokemontype "2")}}selected{{/if}}>Water</option>
                <option value="3" {{#if (equal blog.pokemontype "3")}}selected{{/if}}>Electric</option>
                <option value="4" {{#if (equal blog.pokemontype "4")}}selected{{/if}}>Grass</option>
            </select>
            <button class="btn btn-secondary" type="button" onclick="addNewType()">+</button>
        </div>
        <div id="newTypeContainer"></div>

        <div class="input-group mb-3 mt-3" style="user-select: none;">
            <select name="pokemontrainer" class="form-select" aria-label="Pokemon Type Selection" required style="color: #6c757d;">
                <option value="">Pemilik Pokemon</option>
                <option value="1" {{#if (equal blog.pokemontrainer "1")}}selected{{/if}}>Trainer 1</option>
                <option value="2" {{#if (equal blog.pokemontrainer "2")}}selected{{/if}}>Trainer 2</option>
                <option value="3" {{#if (equal blog.pokemontrainer "3")}}selected{{/if}}>Trainer 3</option>
                <option value="4" {{#if (equal blog.pokemontrainer "4")}}selected{{/if}}>Trainer 4</option>
            </select>
            <button class="btn btn-secondary" type="button" onclick="addNewTrainer()">+</button>
        </div>
        <div id="newTrainerContainer"></div>

        <div class="input-group mb-3" style="user-select: none;">
            <input name="image" type="file" class="form-control" id="image">
            <label class="input-group-text" for="image">Upload</label>
        </div>

        <div class="createblog-button-container mt-4">
            <button class="btn btn-primary" type="submit">Submit</button>
        </div>

    </form>

    <script>
        function addNewType() {
            const container = document.getElementById('newTypeContainer');
            const newInput = document.createElement('div');
            newInput.className = 'input-group mb-3 mt-3';
            newInput.innerHTML = `
                <input type="text" class="form-control" placeholder="New Pokemon Type" required>
                <button class="btn btn-danger" type="button" onclick="this.parentElement.remove()">-</button>
            `;
            container.appendChild(newInput);
        }

        function addNewTrainer() {
            const container = document.getElementById('newTrainerContainer');
            const newInput = document.createElement('div');
            newInput.className = 'input-group mb-3 mt-3';
            newInput.innerHTML = `
                <input type="text" class="form-control" placeholder="New Trainer Name" required>
                <button class="btn btn-danger" type="button" onclick="this.parentElement.remove()">-</button>
            `;
            container.appendChild(newInput);
        }
    </script>

{{/layout}}